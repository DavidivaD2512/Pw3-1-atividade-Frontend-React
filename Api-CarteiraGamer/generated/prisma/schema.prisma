generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelos das tabelas que ir√£o ser usadas como foreign key
model Genero {
  id_genero Int    @id
  genero    String

  jogo Jogo[]
}

model Status {
  id_status Int    @id
  status    String

  jogo Jogo[]
}

/**
 * model Avaliacao {
